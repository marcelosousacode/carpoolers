.container-fluid.login-container
  .row
    .col-md-4
    .col-md-4.col-sm-12
      .card.form-card
        %h2 Change your password
        .content
          = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
            = devise_error_messages!
            = f.hidden_field :reset_password_token
            .form-group
              = f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'New Password'
            .form-group
              = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Re-enter New Password'
            .content
              .form-group
                = f.submit "Change my password", class: 'form-control btn btn-success'
    .col-md-4
